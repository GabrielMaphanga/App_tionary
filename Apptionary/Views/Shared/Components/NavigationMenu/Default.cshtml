@model IEnumerable<string>

<a class="btn btn-block btn-info"
   asp-action="List"
   asp-controller="App"
   asp-route-category="">
    All
</a>

@foreach (string category in Model)
{
    <a class="btn btn-block
@(category == ViewBag.SelectedCategory ? "btn-primary": "btn-danger")"
   
       asp-action="List"
       asp-controller="App"
       asp-route-category="@category"
       asp-route-appPage="1">
        @category
    </a>
}
